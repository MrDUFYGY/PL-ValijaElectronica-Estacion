---
import "../../styles/global.css";
import Layout from "../../layouts/LayoutRigth.astro";
import PerifericosRemisionInputs from "../../components/PerifericosRemisionInputs.svelte";
export const prerender = false;
const idsSubprocesos = [21,22]; // IDs de subprocesos a actualizar
const IdProcesoDia = Astro.url.searchParams.get('Id');
---



<Layout title="RemisiÃ³n de Perifericos" idsSubprocesos={idsSubprocesos} IdProcesoDia={IdProcesoDia}>
  <div class="mx-auto  bg-white rounded-xl shadow-lg p-8 border border-gray-200">
    <PerifericosRemisionInputs client:visible/>
  </div>

  <script type="module">
    const textarea = document.getElementById("observaciones");
    const charCount = document.getElementById("char-count");
    if (textarea && charCount) {
      textarea.addEventListener("input", e => {
        charCount.textContent = `${e.target.value.length} / 500 caracteres`;
      });
    }
  </script>
</Layout>
